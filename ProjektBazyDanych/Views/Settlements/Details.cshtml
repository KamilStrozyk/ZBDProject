@model ProjektBazyDanych.Settlement

@{
	ViewBag.Title = "Szczegóły";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Szczegóły</h1>

<div>
	<h4>Rozliczenie</h4>
	<hr />
	<div class="row">
		<div class="col col-sm-6">
			<dl class="dl-horizontal">
				<dt>
					@Html.DisplayNameFor(model => model.shipmentId)
				</dt>

				<dd>
					@Html.DisplayFor(model => model.shipmentId)
				</dd>
				<dt>
					@Html.DisplayNameFor(model => model.creationDate)
				</dt>

				<dd>
					@Html.DisplayFor(model => model.creationDate)
				</dd>

				<dt>
					@Html.DisplayNameFor(model => model.modificationDate)
				</dt>

				<dd>
					@Html.DisplayFor(model => model.modificationDate)
				</dd>

				<dt>
					@Html.DisplayNameFor(model => model.year)
				</dt>

				<dd>
					@Html.DisplayFor(model => model.year)
				</dd>

				<dt>
					@Html.DisplayNameFor(model => model.month)
				</dt>

				<dd>
					@Html.DisplayFor(model => model.month)
				</dd>

				<dt>
					@Html.DisplayNameFor(model => model.sum)
				</dt>

				<dd>
					@Html.DisplayFor(model => model.sum)
				</dd>
				<dd style="display:none">
					@Html.DisplayFor(model => model.creationDate)
				</dd>

			</dl>
		</div>
	</div>
</div>
<p>
	@Html.ActionLink("Edytuj", "Edit", new { id = Model.id }, new { @class = "btn btn-dark" })
	@if (Model.approved == false)
	{
		@Html.ActionLink("Zatwierdź", "Approve", new { id = Model.id }, new { @class = "btn btn-dark" })
	}
	|
	@Html.ActionLink("Powrót do listy", "Index", null, new { @class = "btn " })
</p>
