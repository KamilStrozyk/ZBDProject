@model IEnumerable<ProjektBazyDanych.DiseaseHistory>

@{
	ViewBag.Title = "Historia chorób";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Historia chorób</h1>

@if (ViewBag.keyword != null)
{
	<h4 style="color:forestgreen">Wyniki wyszukiwania dla: @ViewBag.keyword</h4>
}

<p>
	@Html.ActionLink("Dodaj nową", "Create", null, new { @class = "btn btn-dark mb-3" })
</p>
<table class="table table-dark table-striped">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.beginDate)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.endDate)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Animal.name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Disease.name)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.beginDate)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.endDate)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Animal.name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Disease.name)
			</td>
			<td>
				@Html.ActionLink("Edytuj", "Edit", new { id = item.id }, new { @class = "white-link" }) |
				@Html.ActionLink("Szczegóły", "Details", new { id = item.id }, new { @class = "white-link" }) |
				@Html.ActionLink("Usuń", "Delete", new { id = item.id }, new { @class = "white-link" })
			</td>
		</tr>
	}

</table>
