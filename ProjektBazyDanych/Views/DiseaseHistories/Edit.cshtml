@model ProjektBazyDanych.DiseaseHistory

@{
    ViewBag.Title="Edytuj";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edytuj</h1>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Wpis w historii chorób</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model=>model.id)
    <div class="form-group">
        @Html.LabelFor(model => model.beginDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.beginDate, new { htmlAttributes = new { @class = "form-control",@Value = @Model.beginDate.ToString("yyyy-MM-dd") } })
            @Html.ValidationMessageFor(model => model.beginDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.animalID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("animalID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.animalID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.diseaseId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("diseaseName", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.diseaseId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.endDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.endDate, new { htmlAttributes = new { @class = "form-control",@Value = @Model.endDate?.ToString("yyyy-MM-dd") } })
            @Html.ValidationMessageFor(model => model.endDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Zapisz" class="btn btn-dark" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Powrót do listy", "Index", null,new { @class = "btn " })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
