@model IEnumerable<ProjektBazyDanych.ServicePoint>

@{
    ViewBag.Title = "Punkty usług";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Punkty usług</h2>

<p>
    @Html.ActionLink("Dodaj nowy", "Create", null, new { @class = "btn btn-dark mb-3" })
</p>
<table class="table table-dark table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.howManyWorkers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.income)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.type)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.howManyWorkers)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.income)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.type)
    </td>
    <td>
        @Html.ActionLink("Edytuj", "Edit", new { id = item.name }, new {@class="white-link"}) |
        @Html.ActionLink("Szczegóły", "Details", new { id = item.name }, new {@class="white-link"}) |
        @Html.ActionLink("Usuń", "Delete", new { id = item.name }, new {@class="white-link"})
    </td>
</tr>
}

</table>
