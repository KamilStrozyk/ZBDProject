@model IEnumerable<ProjektBazyDanych.Food>

@{
    ViewBag.Title = "Jedzenie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Jedzenie</h1>

<p>
    @Html.ActionLink("Dodaj nowe", "Create", null, new { @class = "btn btn-dark mb-3" })
</p>
<table class="table table-dark table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.requirement)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.requirement)
    </td>
    <td>
        @Html.ActionLink("Edytuj", "Edit", new { id = item.name }, new {@class="white-link"}) |
        @Html.ActionLink("Szczegóły", "Details", new { id = item.name }, new {@class="white-link"}) |
        @Html.ActionLink("Usuń", "Delete", new { id = item.name }, new {@class="white-link"})
    </td>
</tr>
}

</table>
