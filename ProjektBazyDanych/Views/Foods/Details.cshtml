@model ProjektBazyDanych.Food

@{
    ViewBag.Title = "Szczegóły";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Szczegóły</h1>

<div>
    <h4>Jedzenie</h4>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.requirement)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.requirement)
        </dd>

        <dt>
            Gatunki, które to jedzą:
        </dt>
        <dd>
            <table class="table table-dark table-striped">

                <tr>
                    @{var spiece = Model.Spieces.FirstOrDefault();
                        <th>
                            @Html.DisplayNameFor(model => spiece.name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => spiece.appetite)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => spiece.howMany)
                        </th>
                        <th></th>
                    }
                </tr>
                @foreach (var item in Model.Spieces)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.appetite)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.howMany)
                        </td>
                        <td>
                            @Html.ActionLink("Edytuj", "Edit", "Spieces", new { id = item.name }, new { @class = "white-link" }) |
                            @Html.ActionLink("Szczegóły", "Details", "Spieces", new { id = item.name }, new { @class = "white-link" }) |
                            @Html.ActionLink("Usuń", "Delete", "Spieces", new { id = item.name }, new { @class = "white-link" })
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt>
            Dostawcy,którzy to dostarczają:
        </dt>
        <dd>
            <table class="table table-dark table-striped">

                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.Shipments.FirstOrDefault().supplierName)
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model.Shipments.Select(x => x.supplierName).Distinct())
                {
                    <tr>
                        <td>
                            item
                        </td>
                        <td>
                            @Html.ActionLink("Edytuj", "Edit", "Suppliers", new { id = item }, new { @class = "white-link" }) |
                            @Html.ActionLink("Szczegóły", "Details", "Suppliers", new { id = item }, new { @class = "white-link" }) |
                            @Html.ActionLink("Usuń", "Delete", "Suppliers", new { id = item }, new { @class = "white-link" })
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edytuj", "Edit", new { id = Model.name }, new {@class="btn btn-dark"}) |
    @Html.ActionLink("Powrót do listy", "Index", null,new { @class = "btn " })
</p>
