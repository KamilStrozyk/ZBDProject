@model ProjektBazyDanych.Spiece

@{
    ViewBag.Title = "Szczegóły";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Szczegóły</h1>

<div>
    <h4>Gatunek</h4>
    <hr />
    <dl class="dl-horizontal">
        <div class="row">
            <div class="col-sm-2">
                <dt>
                    @Html.DisplayNameFor(model => model.name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.howMany)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.howMany)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.appetite)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.appetite)
                </dd>
            </div>
            <div class="col-sm-10">
                <dt>
                    Zwierzęta tego gatunku:
                </dt>
                <dd>
                    <table class="table table-dark table-striped">

                        <tr>
                            @{var animal = Model.Animals.FirstOrDefault();
                                <th>
                                    @Html.DisplayNameFor(model => animal.name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => animal.age)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => animal.sex)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => animal.origin)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => animal.inZooSince)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => animal.runwayID)
                                </th>
                                <th></th>
                            }
                        </tr>
                        @foreach (var item in Model.Animals)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.age)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sex)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.origin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.inZooSince)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.runwayID)
                                </td>
                                <td>
                                    @Html.ActionLink("Szczegóły", "Details", "Animals", new { id = item.id }, new { @class = "white-link" })
                                </td>
                            </tr>
                        }
                    </table>
                </dd>
                <dt class="mb-3">
                    Jedzenie, które je ten gatunek:
                </dt>
                <div class="row">
                    <div class="col-sm-5">
                        @Html.ActionLink("Dodaj spożywane jedzenie", "AddFood", new { id = Model.id }, new { @class = "btn btn-dark mr-5 " })
                    </div>
                    <div class="col-sm-5">

                        @Html.ActionLink("Usuń spożywane jedzenie", "DeleteFood", new { id = Model.id }, new { @class = "btn btn-dark " })
                    </div>

                </div>
                    <dd>
                        <table class="table table-dark table-striped mt-4">

                            <tr>
                                @{var food = Model.Foods.FirstOrDefault();
                                    <th>
                                        @Html.DisplayNameFor(model => food.name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => food.requirement)
                                    </th>

                                    <th></th>
                                }
                            </tr>
                            @foreach (var item in Model.Foods)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.requirement)
                                    </td>


                                    <td>
                                        @Html.ActionLink("Szczegóły", "Details", "Foods", new { id = item.id }, new { @class = "white-link" })
                                    </td>
                                </tr>
                            }
                        </table>
                    </dd>
                </div>
        </div>
    </dl>
</div>

<hr/>
<p>
    @Html.ActionLink("Edytuj", "Edit", new { id = Model.id }, new { @class = "btn btn-dark" }) |
    @Html.ActionLink("Powrót do listy", "Index", null, new { @class = "btn " })
</p>
