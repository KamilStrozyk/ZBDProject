@model IEnumerable<ProjektBazyDanych.Animal>

@{
    ViewBag.Title = "Zwierzęta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Zwierzęta</h2>
@if (ViewBag.keyword != null)
{
<h4 style="color:forestgreen">Wyniki wyszukiwania dla: @ViewBag.keyword</h4>
}
@Html.ActionLink("Dodaj nowe", "Create",null,new { @class = "btn btn-dark mb-3" })

<table class="table table-dark table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Spiece1.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sex)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.origin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.inZooSince)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Runway.name)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Spiece1.name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.age)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.sex)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.origin)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.inZooSince)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Runway.name)
    </td>

    <td>
        @Html.ActionLink("Edytuj", "Edit", new { id = item.id }, new { @class = "white-link" }) |
        @Html.ActionLink("Szczegóły", "Details", new { id = item.id }, new { @class = "white-link" }) |
        @Html.ActionLink("Usuń", "Delete", new { id = item.id }, new { @class = "white-link" })
    </td>
</tr>
}

</table>
