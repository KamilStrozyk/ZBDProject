@model ProjektBazyDanych.ServicePointWorker

@{
	ViewBag.Title = "Szczegóły";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Szczegóły</h1>

<div>
    <h4>Pracownik</h4>
    <hr />
    <dl class="dl-horizontal">

        <div class="row">

            <div class="col-sm-2">
                <dt>
                    @Html.DisplayNameFor(model => model.firstName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.firstName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.lastName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.lastName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.age)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.age)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.salary)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.salary)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.employed)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.employed)
                </dd>
            </div>
            <div class="col-sm-10">
                <dt mb-3>
                    Punkty usług, w których pracuje:
                </dt>
                <div class="row">
                    <div class="col-sm-5">
                        @Html.ActionLink("Dodaj punkt usług", "AddServicePoint", new { id = Model.id }, new { @class = "btn btn-dark mr-5 " })
                    </div>
                    <div class="col-sm-5">

                        @Html.ActionLink("Usuń punkt usług", "DeleteServicePoint", new { id = Model.id }, new { @class = "btn btn-dark " })
                    </div>

                </div>
                <dd>
                    <table class="table table-dark table-striped mt-4">

                        <tr>
                            @{var servicePoint = Model.ServicePoints.FirstOrDefault();
                                <th>
                                    @Html.DisplayNameFor(model => servicePoint.name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => servicePoint.howManyWorkers)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => servicePoint.income)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => servicePoint.type)
                                </th>
                                <th></th>
                            }
                        </tr>
                        @foreach (var item in Model.ServicePoints)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.howManyWorkers)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.income)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.type)
                                </td>
                                <td>

                                    @Html.ActionLink("Szczegóły", "Details", "ServicePoints", new { id = item.id }, new { @class = "white-link" })

                                </td>
                            </tr>
                        }
                    </table>
                </dd>
            </div>
        </div>
        </dl>
</div>
<hr />
<p>
	@Html.ActionLink("Edytuj", "Edit", new { id = Model.id }, new { @class = "btn btn-dark" }) |
	@Html.ActionLink("Powrót do listy", "Index", null, new { @class = "btn " })
</p>
