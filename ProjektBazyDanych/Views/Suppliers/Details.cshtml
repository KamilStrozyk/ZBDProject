@model ProjektBazyDanych.Supplier

@{
    ViewBag.Title = "Szczegóły";
}

<h2>Szczegóły</h2>

<div>
    <h4>Dostawca</h4>
    <hr />
    <dl class="dl-horizontal">
        <div class="row">
            <div class="col-sm-2">
                <dt>
                    @Html.DisplayNameFor(model => model.name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.name)
                </dd>
            </div>
            <div class="col-sm-10">
                <dt>
                    Dostawy tego dostawcy:
                </dt>
                <dd>


                    <table class="table table-dark table-striped">
                        @{var shipment = Model.Shipments.FirstOrDefault();

                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => shipment.shipmentDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => shipment.amount)
                                </th>
                                <th></th>
                            </tr>
                        }
                        @foreach (var item in Model.Shipments)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.shipmentDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.amount)
                                </td>
                                <td>

                                    @Html.ActionLink("Szczegóły", "Details", "Shipments", new { id = item.id }, new { @class = "white-link" })

                                </td>
                            </tr>
                        }
                    </table>
                </dd>
                <dt>
                    Rozliczenia tego dostawcy:
                </dt>
                <dd>


                    <table class="table table-dark table-striped">
                        @{var settlement = Model.Shipments.FirstOrDefault();

                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(model => settlement.Settlement.creationDate)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => settlement.Settlement.modificationDate)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => settlement.Settlement.month)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => settlement.Settlement.year)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => settlement.Settlement.sum)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => settlement.Settlement.approved)
                                                    </th>
                                                    <th></th>
                                                </tr>
                        }
                        @foreach (var item in Model.Shipments)
                        {

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Settlement.creationDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Settlement.modificationDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Settlement.month)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Settlement.year)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Settlement.sum)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Settlement.approved)
                        </td>
                        <td>

                            @Html.ActionLink("Szczegóły", "Details", "Settlements", new { id = item.Settlement.shipmentId }, new { @class = "white-link" })

                        </td>
                    </tr>
                        }
                    </table>
                </dd>
            </div>
        </div>
    </dl>
</div>
<p>
    @Html.ActionLink("Edytuj", "Edit", new { id = Model.name }, new {@class="btn btn-dark"}) |
    @Html.ActionLink("Powrót do listy", "Index", null,new { @class = "btn " })
</p>
