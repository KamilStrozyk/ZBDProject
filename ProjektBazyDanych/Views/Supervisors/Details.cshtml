@model ProjektBazyDanych.Supervisor

@{
    ViewBag.Title = "Szczegóły";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Szczegóły</h1>

<div>
    <h4>Nadzorca</h4>
    <hr />
    <div class="row">
        <div class="col-sm-3">


            <dt>
                @Html.DisplayNameFor(model => model.firstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.firstName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.lastName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.lastName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.age)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.age)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.salary)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.salary)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.employed)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.employed)
            </dd>
        </div>
        <div class="col-sm-9">
            <dt class="mb-3">
                Wybiegi przypisane do nadzorcy:
            </dt>
            <div class="row">
                <div class="col-sm-5">
                    @Html.ActionLink("Dodaj wybieg", "AddRunway", new { id = Model.id }, new { @class = "btn btn-dark mr-5 " })
                </div>
                <div class="col-sm-5">

                    @Html.ActionLink("Usuń wybieg", "DeleteRunway", new { id = Model.id }, new { @class = "btn btn-dark " })
                </div>

            </div>
            <dd>


                <table class="table table-dark table-striped mt-4">
                    @{var runway = Model.Runways.FirstOrDefault();

                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => runway.name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => runway.area)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => runway.animalCount)
                            </th>
                            <th></th>
                        </tr>
                    }
                    @foreach (var item in Model.Runways)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.area)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.animalCount)
                            </td>
                            <td>
                                @Html.ActionLink("Edytuj", "Edit", "Runways", new { id = item.id }, new { @class = "white-link" }) |
                                @Html.ActionLink("Szczegóły", "Details", "Runways", new { id = item.id }, new { @class = "white-link" }) |
                                @Html.ActionLink("Usuń", "Delete", "Runways", new { id = item.id }, new { @class = "white-link" })
                            </td>
                        </tr>
                    }
                </table>
            </dd>
        </div>
    </div>
</div>
<hr />

<p>
    @Html.ActionLink("Edytuj", "Edit", new { id = Model.id }, new { @class = "btn btn-dark" }) |
    @Html.ActionLink("Powrót do listy", "Index", null, new { @class = "btn " })
</p>
