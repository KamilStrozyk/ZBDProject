@model IEnumerable<ProjektBazyDanych.Runway>

@{
    ViewBag.Title = "Wybiegi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Wybiegi</h2>

<p>
    @Html.ActionLink("Dodaj nowy", "Create", null, new { @class = "btn btn-dark mb-3" })
</p>
<table class="table table-dark table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.area)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.animalCount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.area)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.animalCount)
    </td>
    <td>
        @Html.ActionLink("Edytuj", "Edit", new { id = item.id }, new { @class = "white-link" }) |
        @Html.ActionLink("Szczegóły", "Details", new { id = item.id }, new { @class = "white-link" }) |
        @Html.ActionLink("Usuń", "Delete", new { id = item.id }, new { @class = "white-link" })
    </td>
</tr>
}

</table>
