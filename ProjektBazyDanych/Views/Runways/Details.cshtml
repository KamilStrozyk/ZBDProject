@model ProjektBazyDanych.Runway

@{
    ViewBag.Title = "Szczegóły";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Szczegóły</h1>

<div>
    <h4>Wybieg</h4>
    <hr />
    <dl class="dl-horizontal">
        <div class="row">
            <div class="col-sm-2">

                <dt>
                    @Html.DisplayNameFor(model => model.area)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.area)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.animalCount)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.animalCount)
                </dd>
            </div>
            <div class="col-sm-10">
                <dt>
                    Zwierzęta na tym wybiegu:
                </dt>
                <dd>
                    <table class="table table-dark table-striped">

                        <tr>
                            @{var animal = Model.Animals.FirstOrDefault();
                                <th>
                                    @Html.DisplayNameFor(model => animal.name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => animal.age)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => animal.sex)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => animal.origin)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => animal.inZooSince)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => animal.spiece)
                                </th>
                                <th></th>
                            }
                        </tr>
                        @foreach (var item in Model.Animals)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.age)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sex)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.origin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.inZooSince)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.spiece)
                                </td>
                                <td>
                                    @Html.ActionLink("Szczegóły", "Details", "Animals", new { id = item.id }, new { @class = "white-link" })
                                </td>
                            </tr>
                        }
                    </table>
                </dd>
                <dt class="mb-3">
                    Nadzorcy przypisani do tego wybiegu:
                </dt>
                <div class="row">
                    <div class="col-sm-5">
                        @Html.ActionLink("Dodaj nadzorcę", "AddSupervisor", new { id = Model.id }, new { @class = "btn btn-dark mr-5 " })
                    </div>
                    <div class="col-sm-5">

                        @Html.ActionLink("Usuń nadzorcę", "DeleteSupervisor", new { id = Model.id }, new { @class = "btn btn-dark " })
                    </div>

                </div>
                <dd>
                    <table class="table table-dark table-striped mt-4">

                        <tr>
                            @{var supervisor = Model.Supervisors.FirstOrDefault();
                                <th>
                                    @Html.DisplayNameFor(model => supervisor.firstName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => supervisor.lastName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => supervisor.age)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => supervisor.salary)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => supervisor.employed)
                                </th>
                                <th></th>
                            }
                        </tr>
                        @foreach (var item in Model.Supervisors)
                        {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.firstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.lastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.salary)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.employed)
                        </td>


                        <td>
                            @Html.ActionLink("Szczegóły", "Details", "Supervisors", new { id = item.id }, new { @class = "white-link" })
                        </td>
                    </tr>
                        }
                    </table>
                </dd>
            </div>
        </div>
    </dl>
</div>
<p>
    @Html.ActionLink("Edytuj", "Edit", new { id = Model.id }, new {@class="btn btn-dark"}) |
    @Html.ActionLink("Powrót do listy", "Index", null,new { @class = "btn " })
</p>
